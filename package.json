{
  "name": "jamesrichards.info",
  "version": "0.0.1",
  "description": "Awesome content for developers",
  "main": "index.js",
  "scripts": {
    "dev:design": "webpack --watch",
    "dev:hugo": "cd hugo && hugo server --verbose --disableFastRender",
    "dev": "concurrently \"npm run dev:hugo\" \"npm run dev:design\"",
    "build:design": "webpack",
    "build:hugo": "cd hugo && hugo",
    "build:components": "cd components && npm run lint && npm run build",
    "build:components:dev": "cd components && npm run lint && npm run build:dev",
    "build": "run-s prebuild build:components build:design build:hugo",
    "deploy": "firebase deploy --debug --token \"$FIREBASE_TOKEN\" --only hosting",
    "oncommit": "run-s format:fix tslint:fix",
    "format:fix": "pretty-quick --staged",
    "tslint:fix": "cd components && npm run lint:fix",
    "clean": "rimraf public/*",
    "prebuild": "npm run clean"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run oncommit"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.15",
    "@fortawesome/free-brands-svg-icons": "^5.7.2",
    "@fortawesome/free-regular-svg-icons": "^5.7.2",
    "@fortawesome/free-solid-svg-icons": "^5.7.2",
    "hotroute": "0.0.7"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.1.0",
    "assets-webpack-plugin": "^3.9.7",
    "atomic-algolia": "^0.3.17",
    "autoprefixer": "^9.4.5",
    "bootstrap.native": "^2.0.24",
    "bootstrap.native-loader": "^1.0.7",
    "clean-webpack-plugin": "^1.0.0",
    "concurrently": "^4.1.0",
    "css-loader": "^1.0.1",
    "cssnano": "^4.1.8",
    "extract-text-webpack-plugin": "^3.0.2",
    "firebase-admin": "^6.1.0",
    "fs-extra": "^7.0.0",
    "http-server": "^0.11.1",
    "husky": "^1.3.1",
    "mini-css-extract-plugin": "^0.4.4",
    "node-sass": "^4.9.4",
    "npm-run-all": "^4.1.5",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss": "^7.0.11",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.15.3",
    "pretty-quick": "^1.8.0",
    "purgecss-from-js": "^0.1.0",
    "rimraf": "^2.6.3",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "tailwindcss": "^0.7.3",
    "ts-loader": "^5.3.3",
    "typescript": "^3.1.6",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "webpack": "^4.28.4",
    "webpack-cli": "^3.2.1"
  }
}
